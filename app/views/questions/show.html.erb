<% title 'Questions' %>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="<%= towers_path %>">Towers</a></li>
  <li><a href="<%= tower_path(@tower.id) %>"><%= @tower.name.capitalize %></a></li>
  <li><a href="<%= topic_path(@topic.id) %>"><%= @topic.name.capitalize %></a></li>
  <li class="active">Level <%= @level %></li>
</ol>

<div class="container">
    <h1 class="text-center">Zone of <%= @zone.name.capitalize %></h1>
    <span id="show-life" class="pull-right">Lives left: <%= @progress.lives %></span>

</div>

<div class="container">
    <%= form_for(:question, remote: true) do |f| %>
    <div class="panel panel-default">
        <div class="panel-heading"><%= @question.question %></div>
            <div class="panel-body">
                <div class = "radio">
                    <label>
                    <input type = "radio" name = "questionOptions" id = "optionsRadios1" value = "a" > <%= @question.a %>
                    </label>
                </div>
                <div class = "radio">
                    <label>
                    <input type = "radio" name = "questionOptions" id = "optionsRadios2" value = "b" > <%= @question.b %>
                    </label>
                </div>
                <div class = "radio">
                    <label>
                    <input type = "radio" name = "questionOptions" id = "optionsRadios3" value = "c" > <%= @question.c %>
                    </label>
                </div>
                <div class = "radio">
                    <label>
                    <input type = "radio" name = "questionOptions" id = "optionsRadios4" value = "d" > <%= @question.d %>
                    </label>
                </div>
            </div>
        </div>
        <button id="question-submit-btn" data-questionid="<%= @question.id %>" data-level="<%= @level %>" data-zoneid="<%= @zone.id %>" type="button" class="btn btn-info" <% if @finishedLevel %>disabled<% end %>>Submit</button>
        <span id="flash-message" style="display: none"></span>
        <% if not @next_question.nil? %>
        <a href="<%= question_path(:zone_id=>@zone.id, :question_id=>@next_question.id, :level=>@next_level) %>" data-method="get">
            <button id="" data-questionid="<%= @question.id %>" type="button" class="btn btn-info pull-right next-btn">Next</button>
        </a>
        <% elsif not @next_zonequestion.nil? %>
            <a href="<%= question_path(:zone_id=>@next_zone.id, :question_id=>@next_zonequestion.id, :level=>@next_level) %>" data-method="get">
                <button id="" data-questionid="<%= @question.id %>" type="button" class="btn btn-info pull-right next-btn">Next Zone</button>
            </a>
        <% end %>

    <% end %>
</div>

