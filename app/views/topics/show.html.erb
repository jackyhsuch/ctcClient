<% title @topic.name.upcase %>
<%= render 'layouts/header' %>

<div class="container">
	<h1 class="text-center"><%= @topic.name.upcase %></h1>
</div>

<div class="container">
	<% @zones.each_with_index  do |zone, count| %>
		<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">
					<a data-toggle="collapse" href="#collapse_<%=zone.difficulty %>">
						<h4 class="panel-title">
							<%= zone.name %>
						</h4>
					</a>
				</div>
				<div id="collapse_<%=zone.difficulty %>" class="panel-collapse collapse">
					<ul class="list-group">	
						<% for zones_question in @questionsArray[count] %>
						<a <% if @overAllCount > @progress.level %> href="<%= question_path(:zone_id=>zone.id, :question_id=>zones_question.question_id, :level=>@overAllCount) %>" data-method="get" <% else %> style="color: #ff6961" <% end %>>
							<li class="list-group-item">Level <%= @overAllCount %></li>
							<% @overAllCount += 1 %>
						</a>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	<% end %>
</div>


