<% title @tower.name.upcase %>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="<%= towers_path %>">Towers</a></li>
  <li class="active"><%= @tower.name.capitalize %></li>
</ol>

<div class="container">
	<h1 class="text-center"><%= @tower.name.upcase %></h1>
</div>

<div class="container">
	<% @topics.each do |topic| %>
		<div class="col-md-4 topics-box">
			<a href="<%= topic_path(topic.id) %>">
				<div class="topics-button">
					<span class="topics-title"><%= topic.name %></span>
				</div>
			</a>
		</div>
	<% end %>
</div>